---
interface Props {
  src: string;
  title: string;
}

const { src, title } = Astro.props;
---


<video 
  id="myVideo"
  class="fullscreen-video"
  src={src} 
  title={title}
  loop 
  playsinline
>
</video>

<script>
  const video = document.getElementById('myVideo') as HTMLVideoElement;
  video.play().catch(() => {
    // Si autoplay falla, se muestran los controles para que el usuario lo inicie manualmente
    video.setAttribute('controls', 'controls');
  });
</script>




<style>
  .fullscreen-video {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
  }
</style>

