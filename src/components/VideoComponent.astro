---
interface Props {
  src: string;
  title: string;
}

const { src, title } = Astro.props;
---


<video 
  class="fullscreen-video"
  src={src} 
  title={title}
  autoplay 
  loop 
  playsinline
>
</video>



<style>
  .fullscreen-video {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    object-fit: cover;
    z-index: -1;
  }
</style>

